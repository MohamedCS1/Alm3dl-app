<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/backgroundalert"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10pt"
            android:layout_marginBottom="10pt"
            android:text="أنت على وشك الخروج هل تريد حفظ نقاطك؟"
            android:textColor="#000000"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2pt"
                android:background="@drawable/backgroundbutton"
                android:foreground="@drawable/rippleeffect"
                android:text="No" />

            <Button
                android:id="@+id/buYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/backgroundbuttonvert"
                android:foreground="@drawable/rippleeffect"
                android:text="Yes" />
        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="71dp"
        android:layout_height="53dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="1.2pt"
        android:background="@drawable/backgroundicon"
        android:paddingTop="3pt"
        android:src="@drawable/icoo" />
</RelativeLayout>