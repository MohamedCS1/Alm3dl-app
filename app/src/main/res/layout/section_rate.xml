<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/fbutton_color_peter_river"
    android:orientation="vertical"
    tools:context=".moyenclass.Section_rate">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="#EFADAD"
            android:gravity="center"
            android:text="حساب معدل القسم"
            android:textColor="#000000"
            android:textSize="22sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="41dp"
            android:layout_weight="0"
            android:background="#000000"
            android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="0.3pt"
                    android:layout_marginRight="0.3pt"
                    android:layout_weight="1"
                    android:background="#EFADAD"
                    android:gravity="center"
                    android:text="العلامة"
                    android:textColor="#000000"
                    android:textSize="22sp"
                    android:textStyle="normal" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="0.3pt"
                    android:layout_marginTop="0.3pt"
                    android:layout_weight="1"
                    android:background="#EFADAD"
                    android:gravity="center"
                    android:text="التلميذ "
                    android:textColor="#000000"
                    android:textSize="22sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/listview1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#FFFFFF" />

</LinearLayout>