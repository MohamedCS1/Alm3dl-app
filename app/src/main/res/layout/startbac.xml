<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="#000000"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1pt"
            android:background="#AFBEEA"
            android:gravity="center"
            android:text="الباكالوريا"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/mathbac"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:background="#000000"
        android:foreground="@drawable/rippleeffect">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="1pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.7"
            android:background="#FFFFFF"
            android:src="@drawable/math" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.3"
            android:background="#AFBEEA"
            android:gravity="center"
            android:text="شعبة رياضيات"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/sentficbac"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:background="#000000"
        android:foreground="@drawable/rippleeffect"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="0.5pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.7"
            android:background="#FFFFFF"
            android:src="@drawable/sintfic" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.3"
            android:background="#AFBEEA"
            android:gravity="center"
            android:text="شعبة علوم تجريبية"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/gestionbac"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:background="#000000"
        android:foreground="@drawable/rippleeffect"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="0.5pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.7"
            android:background="#FFFFFF"
            android:src="@drawable/iconomie" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.3"
            android:background="#AFBEEA"
            android:gravity="center"
            android:text="شعبة تسيير و إقتصاد"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/trbac"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:background="#000000"
        android:foreground="@drawable/rippleeffect"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="0.5pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.7"
            android:background="#FFFFFF"
            android:src="@drawable/math_techniqe" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.3"
            android:background="#AFBEEA"
            android:gravity="center"
            android:text="شعبة تقني رياضي"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/longbac"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:background="#000000"
        android:foreground="@drawable/rippleeffect"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="0.5pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.7"
            android:background="#FFFFFF"
            android:src="@drawable/la_long" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="0.5pt"
            android:layout_weight="0.3"
            android:background="#AFBEEA"
            android:gravity="center"
            android:text="شعبة لغات أجنبية"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/flsafabac"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:layout_weight="1"
        android:background="#000000"
        android:foreground="@drawable/rippleeffect"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="1pt"
            android:layout_marginTop="0.5pt"
            android:layout_marginBottom="1pt"
            android:layout_weight="0.7"
            android:background="#FFFFFF"
            android:src="@drawable/literature" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0.5pt"
            android:layout_marginRight="1pt"
            android:layout_marginBottom="1pt"
            android:layout_weight="0.3"
            android:background="#AFBEEA"
            android:gravity="center"
            android:text="شعبة اداب و فلسفة"
            android:textColor="#000000"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>
</LinearLayout>